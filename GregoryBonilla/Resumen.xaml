<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GregoryBonilla.Resumen">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Cuotas" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
            </Frame>
            <Grid BackgroundColor="Aqua" RowSpacing="3" ColumnSpacing="2">
                <Label Grid.Row="0" Grid.Column="0" Text="Nombre: " />
                <Entry Grid.Row="0" Grid.Column="1" x:Name="txtNom" />
                <Label Grid.Row="1" Grid.Column="0" Text="Cuotas: "/>
                <Entry Grid.Row="1" Grid.Column="1" x:Name="txtCuota" />
                <Label Grid.Row="2" Grid.Column="0" Text="Total Pagar: "/>
                <Entry Grid.Row="2" Grid.Column="1" x:Name="txtTotal"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>